    <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8">
    <title>DVD catalog - SignIn</title>

    <!-- CSS -->
    <!-- Bootstrap CSS -->
    <!--<link rel="stylesheet" href="css/bootstrap-2.3.1.css">-->
    <link href="css/bootstrap.min-2.3.2.css" rel="stylesheet">
    <link href="css/bootstrap-responsive.min-2.3.2.css" rel="stylesheet">

    <!-- Our CSS -->
    <link rel="stylesheet" href="css/signin.css">

    <!-- Libraries -->
    <!-- jQuery is used for JavaScript animations (include this before angular.js) -->
    <script src="lib/jQuery/jquery-1.9.1.min.js"></script>

    <!--Slider-in icons-->
    <script type="text/javascript">
        $(document).ready(function() {
            $(".username").focus(function() {
                $(".user-icon").css("left","-48px");
            });
            $(".username").blur(function() {
                $(".user-icon").css("left","0px");
            });

            $(".password").focus(function() {
                $(".pass-icon").css("left","-48px");
            });
            $(".password").blur(function() {
                $(".pass-icon").css("left","0px");
            });
        });
    </script>
</head>
<body>
<!--WRAPPER-->
<div id="wrapper">
    <% if (locals.message) { %>
    <div class="alert alert-danger"><%= locals.message %></div>
    <% } %>
    <!--SLIDE-IN ICONS-->
    <div class="user-icon"></div>
    <div class="pass-icon"></div>
    <!--END SLIDE-IN ICONS-->

    <!--LOGIN FORM-->
    <form name="login-form" action="/login" method="post" class="login-form">

        <!--HEADER-->
        <div class="header">
            <!--TITLE--><h1>Formulaire de connexion</h1><!--END TITLE-->
        </div>
        <!--END HEADER-->

        <!--CONTENT-->
        <div class="content">
            <!--USERNAME--><input name="username" type="text" onfocus="this.value=''" placeholder="Nom d'utilisateur" class="input username" required autofocus/><!--END USERNAME-->
            <!--PASSWORD--><input name="password" type="password" onfocus="this.value=''" placeholder="Mot de passe" class="input password" required/><!--END PASSWORD-->
        </div>
        <!--END CONTENT-->

        <!--FOOTER-->
        <div class="footer">
            <!--LOGIN BUTTON--><input type="submit" name="submit" value="Connexion" class="button" /><!--END LOGIN BUTTON-->
            <!--REGISTER BUTTON-->
            <!--<input type="submit" name="submit" value="Register" class="register" />-->
            <!--END REGISTER BUTTON-->
        </div>
        <!--END FOOTER-->

    </form>
    <!--END LOGIN FORM-->

    <div class="span4">Mathieu PALOMBA - 2014</div>
</div>
<!--END WRAPPER-->

<!--GRADIENT--><div class="gradient"></div><!--END GRADIENT-->
</body>
</html>