    <link href="css/bootstrap-responsive.min-2.3.2.css" rel="stylesheet">

    <!-- Our CSS -->
    <link rel="stylesheet" href="css/app.css">
    <!-- For CSS Transitions and/or Keyframe Animations -->
    <link rel="stylesheet" href="css/animations.css">

    <!-- Libraries -->
    <!-- jQuery is used for JavaScript animations (include this before angular.js) -->
    <script src="lib/jQuery/jquery-1.9.1.min.js"></script>

    <!-- Angular library -->
    <script src="lib/angular/angular.js"></script>
    <!-- Require module to handle route-->
    <script src="lib/angular/angular-route.js"></script>
    <!-- Require module for create our ressource -->
    <script src="lib/angular/angular-resource.js"></script>
    <!-- Required module to enable animation support in AngularJS -->
    <script src="lib/angular/angular-animate.js"></script>

    <!-- Bootstrap library for popover tooltips (require by bootstrap-ui) -->
    <!--<script src="lib/Bootstrap/bootstrap-2.3.1.js"></script>-->
    <script src="lib/Bootstrap/bootstrap.min-2.3.2.js"></script>
    <script src="lib/Bootstrap/tooltip.js"></script>
